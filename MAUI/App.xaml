<?xml version = "1.0" encoding = "UTF-8" ?>
<Application x:Class="LocationShareApp.App"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LocationShareApp"
             xmlns:helpers="clr-namespace:LocationShareApp.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/MaterialStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/ResponsiveStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- 转换器 -->
            <helpers:StringToBoolConverter x:Key="StringToBoolConverter" />
            <helpers:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <helpers:BoolToColorConverter x:Key="BoolToColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
