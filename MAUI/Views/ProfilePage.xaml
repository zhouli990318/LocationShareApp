<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="LocationShareApp.Views.ProfilePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:LocationShareApp.ViewModels"
             x:DataType="viewmodels:MainViewModel"
             Title="我的">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            
            <!-- 用户信息卡片 -->
            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   HasShadow="True"
                   Padding="20">
                <StackLayout Spacing="15">
                    
                    <!-- 头像和基本信息 -->
                    <StackLayout Orientation="Horizontal" Spacing="15">
                        <Frame BackgroundColor="{StaticResource Primary}"
                               CornerRadius="35"
                               HeightRequest="70"
                               WidthRequest="70"
                               Padding="0"
                               HasShadow="False">
                            <Label Text="{Binding CurrentUser.NickName, StringFormat='{0:U1}'}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Frame>
                        
                        <StackLayout Spacing="5" VerticalOptions="Center">
                            <Label Text="{Binding CurrentUser.NickName}"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}" />
                            <Label Text="{Binding CurrentUser.PhoneNumber}"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray600}" />
                        </StackLayout>
                    </StackLayout>

                    <!-- 绑定码 -->
                    <Frame BackgroundColor="{StaticResource Gray100}"
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="False">
                        <StackLayout Spacing="5">
                            <Label Text="我的绑定码"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray600}" />
                            <Label Text="{Binding CurrentUser.BindingCode}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}"
                                   HorizontalOptions="Center" />
                            <Label Text="其他用户可通过此码关联您"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray500}"
                                   HorizontalOptions="Center" />
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </Frame>

            <!-- 功能菜单 -->
            <StackLayout Spacing="10">
                
                <!-- 用户管理 -->
                <Frame BackgroundColor="White"
                       CornerRadius="12"
                       HasShadow="True"
                       Padding="0">
                    <Grid Padding="20,15" ColumnDefinitions="Auto,*,Auto">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding AddUserCommand}" />
                        </Grid.GestureRecognizers>
                        
                        <Label Grid.Column="0"
                               Text="👥"
                               FontSize="20"
                               VerticalOptions="Center" />
                        <Label Grid.Column="1"
                               Text="用户管理"
                               FontSize="16"
                               TextColor="{StaticResource Gray900}"
                               VerticalOptions="Center"
                               Margin="15,0,0,0" />
                        <Label Grid.Column="2"
                               Text=">"
                               FontSize="16"
                               TextColor="{StaticResource Gray400}"
                               VerticalOptions="Center" />
                    </Grid>
                </Frame>

                <!-- 设置 -->
                <Frame BackgroundColor="White"
                       CornerRadius="12"
                       HasShadow="True"
                       Padding="0">
                    <Grid Padding="20,15" ColumnDefinitions="Auto,*,Auto">
                        <Label Grid.Column="0"
                               Text="⚙️"
                               FontSize="20"
                               VerticalOptions="Center" />
                        <Label Grid.Column="1"
                               Text="设置"
                               FontSize="16"
                               TextColor="{StaticResource Gray900}"
                               VerticalOptions="Center"
                               Margin="15,0,0,0" />
                        <Label Grid.Column="2"
                               Text=">"
                               FontSize="16"
                               TextColor="{StaticResource Gray400}"
                               VerticalOptions="Center" />
                    </Grid>
                </Frame>

                <!-- 关于 -->
                <Frame BackgroundColor="White"
                       CornerRadius="12"
                       HasShadow="True"
                       Padding="0">
                    <Grid Padding="20,15" ColumnDefinitions="Auto,*,Auto">
                        <Label Grid.Column="0"
                               Text="ℹ️"
                               FontSize="20"
                               VerticalOptions="Center" />
                        <Label Grid.Column="1"
                               Text="关于应用"
                               FontSize="16"
                               TextColor="{StaticResource Gray900}"
                               VerticalOptions="Center"
                               Margin="15,0,0,0" />
                        <Label Grid.Column="2"
                               Text=">"
                               FontSize="16"
                               TextColor="{StaticResource Gray400}"
                               VerticalOptions="Center" />
                    </Grid>
                </Frame>
            </StackLayout>

            <!-- 登出按钮 -->
            <Button Text="退出登录"
                    Command="{Binding LogoutCommand}"
                    BackgroundColor="Transparent"
                    TextColor="Red"
                    FontSize="16"
                    BorderColor="Red"
                    BorderWidth="1"
                    CornerRadius="12"
                    HeightRequest="50"
                    Margin="0,20,0,0" />

        </StackLayout>
    </ScrollView>

</ContentPage>